{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },

    "glob": "allow",
    "list": "allow",
    "grep": "allow",

    "todoread": "allow",
    "todowrite": "allow",

    "edit": "allow",

    "bash": {
      "*": "deny",

      "go test*": "allow",
      "go fmt*": "allow",
      "gofmt*": "allow",
      "go run*": "allow",

      "make*": "allow",

      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git add*": "allow",
      "git commit*": "allow",

      "git push*": "deny",
      "rm *": "deny",
      "sudo *": "deny"
    },

    "webfetch": "deny",
    "websearch": "deny",
    "codesearch": "deny",

    "external_directory": "deny",
    "doom_loop": "deny"
  }
}
